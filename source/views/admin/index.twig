{% extends 'common/home.twig' %}

{% block secondTitle %}<i> Users & Tags </i>{% endblock %}

{% block mainContent %}
	<div class="container w-75 m-5">
    	<h3 class="container-title w-auto my-2 d-flex justify-content-start"> Users List </h3>
		<table class="table table-hover p-5 style="width: 125%;"">
			<thead class="thead-dark">
				<tr>
					<th scope="col">User Name</th>
					<th scope="col">Email</th>
					<th scope="col">Is Admin?</th>
					<th scope="col"></th> <!-- See Posts -->
					<th scope="col"></th> <!-- Edit Permissions -->
					<th scope="col"></th> <!-- Delete Account -->
				</tr>
			</thead>
			<tbody>
				{% for Account in accounts %}
					<tr>
						<td scope="row">{{Account.username}}</td>
						<td style="white-space: nowrap;">{{Account.email}}</td>
						<td>{{Account.isAdmin}}</td>
						<td>
							<a href="/admin/showPosts/{{ Account.id }}">See Posts</a>
						</td>
						<td>
							<a href="/admin/changeRol/{{ Account.id }}" onclick="return confirm('Are you sure you want to change his role?');">Edit Permissions</a>
						</td>
						<td>
							<a href="/admin/deleteAccount/{{ Account.id }}" onclick="return confirm('Are you sure that you want to delete this account?');">Delete Account</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<h3 class="container-title w-auto my-2 d-flex justify-content-start"> Tags List </h3>
		<table class="table table-hover p-5 style="width: 125%;"">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Tag Name</th>
					<th scope="col"></th> <!-- See Posts with this Tag -->
				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}
					<tr>
						<td scope="row">{{tag.tagName}}</td>
						<td>
							<a href="/admin/showPostsWithTag/{{ tag.id }}">See Posts with This Tag</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
