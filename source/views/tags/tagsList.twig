{% extends 'common/home.twig' %}

{% block secondTitle %}<i> Tag: {{posts[0].Tags[0].tagName}} </i>{% endblock %}

{% block mainContent %}
<div class="w-auto mx-5 my-4 d-flex">
    <a {% block href %}href="/posts">{% endblock %}
        <button type="button" class="btn btn-light"> 
            <span class="btn-label">
                <i class="fa fa-chevron-left"></i>
            </span> Ir atr√°s 
        </button>
    </a>
</div>

<div class="container w-75 m-5">
	<table class="table table-hover p-5 style="width: 125%;"">
		<thead class="thead-dark">
			<tr>
				<th scope="col">Title</th>
				<th scope="col">Tag</th>
				<th scope="col"></th> <!-- See Posts -->
				{% if isAdmin == true %}
					<th scope="col"></th> <!-- Edit Post -->
					<th scope="col"></th> <!-- Delete Post -->
  				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<td scope="row">{{post.title}}</td>
					<td style="white-space: nowrap;"> {{post.Tags[0].tagName}} </td>
					<td>
						<a href="/posts/view/{{ post.id }}">See Post</a>
					</td>
					{% if isAdmin == true %}
						<td>
							<a href="/posts/update/{{ post.id }}" onclick="return confirm('Are you sure you want to edit this post?');">Edit Post</a>
						</td>
						<td>
							<a href="/posts/delete/{{ post.id }}" onclick="return confirm('Are you sure that you want to delete this post?');">Delete Post</a>
						</td>
  					{% endif %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}