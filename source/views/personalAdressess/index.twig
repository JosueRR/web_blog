{% extends 'layout.twig' %}

{% block navbar %}
{% include 'common/navbar.twig' %}
{% endblock %}


{% block body %}
    <div class="container w-75 m-5">
        <h1 class="py-5 display-1" >{{ title }}</h1>
        <p>{{ flashMessage }}</p>
            <table class="table table-hover p-5 style="width: 125%;"">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Teléfono Casa</th>
                        <th scope="col">Dirección Casa</th>
                        <th scope="col">Teléfono Trabajo</th>
                        <th scope="col">Dirección Trabajo</th>
                        <th scope="col">Correo Electrónico</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
        {% for PersonalAdress in personalAdressess %}
                    <tr>
                        <td scope="row">{{PersonalAdress.nombre}}</td>
                        <td style="white-space: nowrap;">{{PersonalAdress.apellidos}}</td>
                        <td>{{PersonalAdress.telefonoCasa}}</td>
                        <td>{{PersonalAdress.direccionCasa}}</td>
                        <td>{{PersonalAdress.telefonoTrabajo}}</td>
                        <td>{{PersonalAdress.direccionTrabajo}}</td>
                        <td>{{PersonalAdress.correo}}</td>
                        <td>
                            <a href="/personaladress/update/{{ PersonalAdress.id }}">Editar</a>
                        </td>
                        <td>
                            <a href="/personaladress/delete/{{ PersonalAdress.id }}" onclick="return confirm('¿Está seguro?');">Borrar</a>
                        </td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>
        <a href="/personaladress/create">¡Añadir una nueva dirección!</a>
        <footer style="position: fixed; left: 0; bottom: 0; width: 100%; background-color: #304146; padding: 10px; text-align: center;">
            <h3 class="py-3 display-7">Author: Josué Retana Rodríguez</h3>
        </footer>
    </div>
{% endblock %}